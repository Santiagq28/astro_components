---
const { isRounded = false } = Astro.props;
---

<!--
<button class="bg-blue-400 text-white rounded px-2 pt-1 pb-2 leading-3 hover:bg-blue-500 transition-colors">
    { text }
</button>

 -->
<button class:list={
    ["bg-blue-400",
    " text-white",
    " px-2",
    " pt-1",
    " pb-2",
    " leading-3",
    " hover:bg-blue-500",
    " transition-colors",
    {rounded: isRounded}
    ]}
    class="flex items-center h-10">

    <slot name="text"/>
    <div class="bg-red-500 text-white rounded-full p-1 ml-2 size-6 flex items-center justify-center">
        <slot name="icon"/>
    </div>
</button>